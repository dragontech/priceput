#authentication
  - if user_signed_in?
    Authenticated as #{current_user.name}
    %br
    = link_to "my profile", current_user.suppliers.first, { :id => 'my-profile' }
    = link_to "logout", destroy_user_session_path, { 'data-method' => :delete, :id => 'logout' }
  - else
    = link_to "login", new_user_session_path, { :id => 'login' }
