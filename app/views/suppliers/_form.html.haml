= form_for(@supplier) do |f|
  - if @supplier.errors.any?
    #error_explanation
      %h2
        = pluralize(@supplier.errors.count, "error")
        prohibited this supplier from being saved:

      %ul
        - @supplier.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name

  .field
    = f.label :last_name
    = f.text_field :last_name

  .field{ class: (@supplier.errors.messages.keys.include?(:base) ? "field_with_errors" : "") }
    = f.label :phone
    = f.text_field :phone

  .field{ class: (@supplier.errors.messages.keys.include?(:base) ? "field_with_errors" : "") }
    = f.label :mobile
    = f.text_field :mobile

  .field
    = f.label :fax
    = f.text_field :fax

  .field
    = f.label :cnp
    = f.text_field :cnp

  .field
    = f.label :site
    = f.text_field :site

  .actions= f.submit value: "Save"
