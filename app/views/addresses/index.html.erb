<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Addressable</th>
    <th>Addressable type</th>
    <th>County</th>
    <th>City</th>
    <th>Street</th>
    <th>Number</th>
    <th>Block</th>
    <th>Apartment</th>
    <th>Zip code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.addressable_id %></td>
    <td><%= address.addressable_type %></td>
    <td><%= address.county %></td>
    <td><%= address.city %></td>
    <td><%= address.street %></td>
    <td><%= address.number %></td>
    <td><%= address.block %></td>
    <td><%= address.apartment %></td>
    <td><%= address.zip_code %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

